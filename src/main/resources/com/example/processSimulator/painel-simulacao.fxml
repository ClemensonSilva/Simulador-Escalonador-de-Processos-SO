<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="rootPane" prefHeight="500.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.processSimulator.controller.SimuladorController">

    <VBox alignment="CENTER" layoutX="175.0" layoutY="50.0" spacing="10.0" AnchorPane.leftAnchor="150.0" AnchorPane.topAnchor="50.0">
        <children>
            <Label text="RUNNING" style="-fx-font-weight: bold; -fx-font-size: 14px;" />
            <Pane fx:id="runningProcessContainer" prefHeight="60.0" prefWidth="80.0" style="-fx-border-color: lightgray; -fx-border-width: 2; -fx-background-color: #f4f4f4;" />
        </children>
    </VBox>

    <VBox alignment="CENTER" layoutX="588.0" layoutY="50.0" spacing="10.0" AnchorPane.rightAnchor="150.0" AnchorPane.topAnchor="50.0">
        <children>
            <Label text="clock" style="-fx-font-weight: bold; -fx-font-size: 14px;" />
            <Label fx:id="clockLabel" text="0" style="-fx-font-weight: bold;">
                <font>
                    <Font size="36.0" />
                </font>
            </Label>
        </children>
    </VBox>

    <VBox layoutX="50.0" layoutY="350.0" spacing="10.0" AnchorPane.bottomAnchor="70.0" AnchorPane.leftAnchor="50.0">
        <children>
            <Label text="READYQUEUE" style="-fx-font-weight: bold; -fx-font-size: 14px;" />
            <HBox fx:id="readyQueueContainer" alignment="CENTER_LEFT" prefHeight="60.0" spacing="5.0" style="-fx-border-color: lightgray; -fx-border-width: 1; -fx-padding: 5;" />
        </children>
    </VBox>

    <VBox layoutX="575.0" layoutY="180.0" spacing="10.0" AnchorPane.rightAnchor="150.0" AnchorPane.topAnchor="180.0">
        <children>
            <Label text="FINISH QUEUE" style="-fx-font-weight: bold; -fx-border-color: red; -fx-border-style: dotted; -fx-padding: 4; -fx-font-size: 14px;" />
            <VBox fx:id="finishQueueContainer" prefWidth="80.0" spacing="5.0" style="-fx-border-color: lightgray; -fx-border-width: 1; -fx-padding: 5; -fx-min-height: 150px;" />
        </children>
    </VBox>

    <HBox alignment="CENTER" layoutX="590.0" layoutY="400.0" spacing="10.0" AnchorPane.bottomAnchor="70.0" AnchorPane.rightAnchor="100.0">
        <children>
            <Label  fx:id="statusSimulacaoLabel"></Label>
            <Button fx:id="startButton" mnemonicParsing="false" onAction="#onStartClick" prefWidth="80.0" text="Start" />
            <Button fx:id="resetButton" mnemonicParsing="false" onAction="#onResetClick" prefWidth="80.0" text="Reset" />
            <Button fx:id="returnButton" mnemonicParsing="false" onAction="#onReturnClick" prefWidth="80.0" text="Reset" />

        </children>
    </HBox>
</AnchorPane>