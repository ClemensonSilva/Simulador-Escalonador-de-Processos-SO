<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.geometry.Insets?>
<HBox spacing="10" alignment="CENTER" styleClass="panel" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.processSimulator.controller.TabelaController">
    <padding>
        <Insets top="10" right="10" bottom="10" left="10" />
    </padding>

<TableView  fx:id="processosTable" styleClass="table, table-striped" prefHeight="600.0" prefWidth="800.0">
    <columns>

        <TableColumn fx:id="pidColumn" text="PID">
            <cellValueFactory>
                <PropertyValueFactory property="pidColumn" />
            </cellValueFactory>
        </TableColumn>

        <TableColumn fx:id="statusColumn" text="Status">
            <cellValueFactory>
                <PropertyValueFactory property="statusColumn" />
            </cellValueFactory>
        </TableColumn>

        <TableColumn fx:id="burstTimeColumn" text="Burst Time">
            <cellValueFactory>
                <PropertyValueFactory property="burstTimeColumn" />
            </cellValueFactory>
        </TableColumn>

        <TableColumn fx:id="arrivalTimeColumn" text="Arrival Time">
            <cellValueFactory>
                <PropertyValueFactory property="arrivalTimeColumn" />
            </cellValueFactory>
        </TableColumn>

        <TableColumn fx:id="waitingTimeColumn" text="Waiting Time">
            <cellValueFactory>
                <PropertyValueFactory property="waitingTimeColumn" />
            </cellValueFactory>
        </TableColumn>

        <TableColumn fx:id="completionTimeColumn" text="Completion Time">
            <cellValueFactory>
                <PropertyValueFactory property="completionTimeColumn" />
            </cellValueFactory>
        </TableColumn>

        <TableColumn fx:id="turnAroundColumn" text="Turnaround">
            <cellValueFactory>
                <PropertyValueFactory property="turnAroundColumn" />
            </cellValueFactory>
        </TableColumn>

    </columns>

    <columnResizePolicy>
        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
    </columnResizePolicy>

</TableView>
</HBox>