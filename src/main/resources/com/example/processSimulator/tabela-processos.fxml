<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.geometry.Insets?>
<HBox spacing="10" alignment="CENTER" styleClass="panel" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.processSimulator.controller.TabelaController">
    <padding>
        <Insets top="10" right="10" bottom="10" left="10" />
    </padding>

<TableView  fx:id="processosTerminadosTable" styleClass="table, table-striped" prefHeight="600.0" prefWidth="800.0">
    <columns>

        <TableColumn text="PID">
            <cellValueFactory>
                <PropertyValueFactory property="pid" />
            </cellValueFactory>
        </TableColumn>

        <TableColumn text="Status">
            <cellValueFactory>
                <PropertyValueFactory property="status" />
            </cellValueFactory>
        </TableColumn>

        <TableColumn text="Burst (Execução)">
            <cellValueFactory>
                <PropertyValueFactory property="burstTime" />
            </cellValueFactory>
        </TableColumn>

        <TableColumn text="Chegada">
            <cellValueFactory>
                <PropertyValueFactory property="arrivalTime" />
            </cellValueFactory>
        </TableColumn>

        <TableColumn text="Tempo de Espera">
            <cellValueFactory>
                <PropertyValueFactory property="waitingTime" />
            </cellValueFactory>
        </TableColumn>

        <TableColumn text="Conclusão">
            <cellValueFactory>
                <PropertyValueFactory property="completionTime" />
            </cellValueFactory>
        </TableColumn>

        <TableColumn text="Turnaround">
            <cellValueFactory>
                <PropertyValueFactory property="turnAround" />
            </cellValueFactory>
        </TableColumn>

    </columns>

    <columnResizePolicy>
        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
    </columnResizePolicy>

</TableView>
</HBox>